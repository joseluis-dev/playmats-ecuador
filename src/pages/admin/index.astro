---
import Layout from "@/layouts/Layout.astro";

// TODO: Agregar protección de ruta para administradores
---

<Layout title="Admin Dashboard - Playmats Ecuador">
  <main class="container mx-auto p-4">
    <div class="flex flex-col gap-6">
      <h1 class="text-3xl font-bold">Panel de Administración</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <a href="/admin/products" class="block">
          <div class="bg-[var(--color-surface)]/90 p-6 rounded-lg hover:bg-[var(--color-surface)] transition-colors">
            <h2 class="text-xl font-semibold mb-2">Productos</h2>
            <p class="text-[var(--color-text)]/70">
              Gestiona los productos, sus imágenes, categorías y atributos
            </p>
          </div>
        </a>

        <a href="/admin/resources" class="block">
          <div class="bg-[var(--color-surface)]/90 p-6 rounded-lg hover:bg-[var(--color-surface)] transition-colors">
            <h2 class="text-xl font-semibold mb-2">Recursos</h2>
            <p class="text-[var(--color-text)]/70">
              Administra recursos, categorías y atributos del sistema
            </p>
          </div>
        </a>

        <a href="/admin/orders" class="block">
          <div class="bg-[var(--color-surface)]/90 p-6 rounded-lg hover:bg-[var(--color-surface)] transition-colors">
            <h2 class="text-xl font-semibold mb-2">Órdenes</h2>
            <p class="text-[var(--color-text)]/70">
              Administra las órdenes de los clientes
            </p>
          </div>
        </a>
      </div>
    </div>
  </main>
</Layout>
