---
import Layout from "@/layouts/Layout.astro";
import { SignedIn, SignedOut } from "@clerk/astro/components";
import { AddressesClerk } from "@/components/Address/AddressesClerk";
---

<Layout title="Mis direcciones - Playmats Ecuador">
  <main class="max-w-4xl mx-auto px-4 py-8">
    <SignedIn>
      <div class="w-full max-w-3xl mx-auto">
        <h1 class="text-2xl font-bold mb-6 text-[var(--color-text)]">Mis direcciones</h1>
        <AddressesClerk client:visible />
      </div>
    </SignedIn>
    <SignedOut>
      <div class="text-center py-12">
        <h2 class="text-xl font-medium mb-4 text-[var(--color-text)]">Necesitas iniciar sesión para ver tus direcciones</h2>
        <p class="mb-6 text-[var(--color-text)]/70">Por favor inicia sesión o regístrate para administrar tus direcciones de envío</p>
        <a 
          href="/" 
          class="inline-block px-4 py-2 bg-[var(--color-accent)] text-[var(--color-accent-text)] rounded-md hover:bg-[var(--color-accent)]/90 transition-colors"
        >
          Volver al inicio
        </a>
      </div>
    </SignedOut>
  </main>
</Layout>
